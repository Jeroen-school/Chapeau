@model List<Chapeau.Models.DisplayOrder>
@{
    ViewData["Title"] = "Kitchen";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Kitchen Display</h1>
        @await Html.PartialAsync("_KitchenBarSwitcher")
    </div>

    <!-- Tabs -->
    @await Html.PartialAsync("_OrderTabs")

    <!-- Orders -->
    <div class="row g-4">
        @foreach (var order in Model)
        {
            <div class="col-md-4">
                <div class="card-body d-flex flex-column order-card">
                    @await Html.PartialAsync("_OrderCard", order)
                </div>
            </div>
        }
    </div>
</div>
