@model Chapeau.ViewModels.PaymentDetailsViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/payment.css" />
    <link rel="stylesheet" href="~/css/split-payment.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}



<div class="mobile-container">
    <div class="top-bar">
        <a href="javascript:history.back()" class="back-button">← Back</a>
        <h2>Table @Model.TableNr</h2>
    </div>

    <!-- Hidden element to store model feedback -->
    <div hidden data-model-feedback="@Model.Feedback"></div>

    <div class="order-content">
        <div class="order-header">
            <span>Order summary:</span>
            <div class="header-columns">
                <span>VAT</span>
                <span>Price</span>
            </div>
        </div>

        <div class="order-items">
            @foreach (var item in Model.Items)
            {
                <div class="order-row">
                    <div class="item-left">
                        <span class="quantity">@item.Quantity</span>
                        <div class="item-info">
                            <div class="item-name">@item.Name</div>
                            @if (!string.IsNullOrEmpty(item.Comment))
                            {
                                <div class="item-comment">@item.Comment</div>
                            }
                        </div>
                    </div>
                    <div class="item-right">
                        <span class="vat" id="totalVatValue">@item.FormattedVAT</span>
                        <span class="price">@item.FormattedPrice</span>
                    </div>
                </div>
            }
        </div>

		<div class="summary-section">
            
            <div class="summary-row">
                <span>Total 9% VAT:</span>
                <span>@Model.FormattedLowVAT</span>
            </div>
            <div class="summary-row">
                <span>Total 21% VAT:</span>
                <span>@Model.FormattedHighVAT</span>
            </div>
            <div class="summary-row">
                <span>Total VAT:</span>
                <span id="totalVatDisplay">@Model.FormattedTotalVAT</span>
            </div>
            
        </div>
        <div id="feedbackDisplay" class="feedback-display" style="display: none;">
            <div class="feedback-content">
                <span class="feedback-label">Feedback:</span>
                <span id="feedbackText"></span>
            </div>
        </div>
        
        <div class="total-section">
            <div class="total-row">
                <span>Total:</span>
                <span id="grandTotal">@Model.FormattedTotal</span>
            </div>

            <div class="total-row">
                <span>Paid Amount:</span>
                <span id="paidAmountDisplay">@Model.FormattedPaidAmount</span>
            </div>
            <div class="total-row">
                <span>Left to Pay:</span>
                <span id="leftAmountDisplay">@Model.FormattedLeftToPay</span>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <div class="full-width-row">
            <button class="action-button blue full-width" onclick="openSplitModal()">Split pay</button>
        </div>
        <div class="full-width-row">
            <button class="action-button blue full-width" onclick="openPaymentMethodModal()">Pay all</button>
        </div>
    </div>
</div>

<!-- Payment Method Modal -->
<div class="modal fade" id="paymentMethodModal" tabindex="-1" aria-labelledby="paymentMethodModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="paymentMethodModalLabel">Payment method</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center mb-4">Choose an option to pay:</p>
                <div class="payment-methods">
                    @foreach (var method in Model.AvailablePaymentMethods)
                    {
                        <button class="payment-method-btn" data-method="@method.Method" onclick="selectPaymentMethod(event)">
                            <i class="bi @method.IconClass"></i>
                            <span>@method.DisplayName</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Split Payment Modal -->
<div class="modal fade" id="splitModal" tabindex="-1" aria-labelledby="splitModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="splitModalLabel">Split by</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="d-flex justify-content-center gap-4">
                    <button class="btn btn-primary btn-lg split-option" onclick="openSplitByDishModal()">
                        Dish
                    </button>
                    <button class="btn btn-primary btn-lg split-option" onclick="openSplitByAmountModal()">
                        Amount
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("_PaymentModal", Model)
@await Html.PartialAsync("_SplitByAmountModal")
@await Html.PartialAsync("_SplitByDishModal", Model)
@section Scripts {
    <script src="~/js/payment.js"></script>
    <script src="~/js/tipSection.js"></script>
    <script>
    </script>
}