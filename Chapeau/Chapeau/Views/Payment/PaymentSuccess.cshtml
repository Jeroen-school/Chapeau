@{
    ViewBag.Title = "Payment process";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content=";url=@Url.Action("Index", "Order")" />
    <title>Payment process</title>
    <style>
        body { text-align: center; padding-top: 40px; font-family: Arial, sans-serif; }
        .checkmark {
            width: 150px;
            height: 150px;
            display: inline-block;
            margin-top: 60px;
        }
        .checkmark-circle {
            stroke: #4BB543;
            stroke-width: 6;
            fill: #4BB543;
        }
        .checkmark-check {
            stroke: #fff;
            stroke-width: 6;
            fill: none;
        }
    </style>
</head>
<body>
    <div style="font-size: 1.3rem; font-weight: 500; margin-bottom: 20px;">Payment process</div>
    <div class="checkmark">
        <svg width="100%" height="100%" viewBox="0 0 52 52">
            <circle class="checkmark-circle" cx="26" cy="26" r="25"/>
            <path class="checkmark-check" d="M16 27l7 7 13-13"/>
        </svg>
    </div>
    <div style="margin-top: 30px; color: #555;">Payment successful! Redirecting to orders...</div>
    <script>
        setTimeout(function() {
            window.location.href = '@Url.Action("Orders", "Waiter")';
        }, 3000);
    </script>
</body>
</html> 