@model Chapeau.ViewModels.PaymentDetailsViewModel

<div class="modal fade" id="splitByDishModal" tabindex="-1" aria-labelledby="splitByDishModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="splitByDishModalLabel">Split payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="mb-2">
                    <span class="fw-semibold">Pick the items</span>
                </div>
                <div class="text-start w-100 mb-3" style="max-height: 250px; overflow-y: auto;">
                    <div class="d-flex justify-content-between px-3 mb-2">
                        <span class="fw-bold">Order summary:</span>
                        <span class="fw-bold">Price</span>
                    </div>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        var item = Model.Items[i];
                        <div class="d-flex align-items-center justify-content-between px-3 py-1 border-bottom">
                            <div class="d-flex align-items-center gap-2">
                                <span>@item.Quantity</span>
                                <span>@item.Name</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <span>@item.FormattedPrice</span>
                                <button type="button" class="btn btn-link p-0 dish-select-btn" data-index="@i" data-price="@item.Price" data-quantity="@item.Quantity" onclick="toggleDishSelection(this)">
                                    <i class="bi bi-check-circle" style="font-size: 1.2rem;"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top border-bottom mb-3">
                    <span class="fw-bold">Total:</span>
                    <span id="splitDishTotal">@Model.FormattedTotal</span>
                </div>
                <div class="d-flex justify-content-between align-items-center px-3 pb-2 mb-3">
                    <span class="fw-bold">To pay:</span>
                    <span id="splitDishToPay">€0,00</span>
                </div>
                <div class="row g-2 mt-3">
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-2" id="splitDishCreditCardBtn">
                            <i class="bi bi-credit-card"></i> Credit card
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-2" id="splitDishCashBtn">
                            <i class="bi bi-cash"></i> Cash
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-2" id="splitDishGiftCardBtn">
                            <i class="bi bi-gift"></i> Gift card
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary w-100 py-2" id="splitDishDebitCardBtn">
                            <i class="bi bi-credit-card"></i> Debit card
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
function toggleDishSelection(btn) {
    btn.querySelector('i').classList.toggle('text-success');
    updateSplitDishToPay();
}

function updateSplitDishToPay() {
    let total = 0;
    document.querySelectorAll('.dish-select-btn').forEach(function(btn) {
        if (btn.querySelector('i').classList.contains('text-success')) {
            const price = parseFloat(btn.getAttribute('data-price'));
            const quantity = parseInt(btn.getAttribute('data-quantity'));
            total += price * quantity;
        }
    });
    document.getElementById('splitDishToPay').textContent = '€' + total.toFixed(2).replace('.', ',');
}
</script> 