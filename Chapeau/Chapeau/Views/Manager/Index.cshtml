@model IEnumerable<Chapeau.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<div class="container">
    <h1>Employee Management</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <p>Showing all employees in the system</p>
        <a asp-controller="Manager" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Employee
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Employee No.</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeNr</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Role</td>
                        <td>
                            <div class="btn-group">
                                <form asp-controller="Manager" asp-action="Delete" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete @employee.FirstName @employee.LastName?');">
                                    <input type="hidden" name="employeeNr" value="@employee.EmployeeNr" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>