@{
    ViewData["Title"] = "Unauthorized";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Access Denied</h2>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock" style="font-size: 4rem; color: #dc3545;"></i>
                    <h4 class="mt-3">You do not have permission to access this resource</h4>
                    <p class="mb-4">Please contact an administrator if you believe this is in error.</p>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>