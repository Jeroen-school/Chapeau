@using Chapeau.Models
@using Chapeau.Services
@{
    ViewData["Title"] = "Waiter Dashboard";
    // Get the logged-in employee from session
    var loggedInEmployee = Context.Session.GetObject<Employee>("LoggedInEmployee");
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Waiter Dashboard</h1>
            @if (loggedInEmployee != null)
            {
                <p class="lead">Welcome, @loggedInEmployee.FirstName! What would you like to do today?</p>
            }
            else
            {
                <p class="lead">Welcome! What would you like to do today?</p>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0"><i class="bi bi-grid-3x3"></i> Tables</h3>
                </div>
                <div class="card-body">
                    <p>View and manage restaurant tables and their status.</p>
                    <p>Check which tables are free or occupied, and update their status as needed.</p>
                    <div class="d-grid">
                        <a asp-action="Tables" class="btn btn-primary btn-lg">
                            <i class="bi bi-grid-3x3"></i> View Tables
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0"><i class="bi bi-card-checklist"></i> Orders</h3>
                </div>
                <div class="card-body">
                    <p>Take new orders and manage existing ones.</p>
                    <p>Create orders for customers, add items, and track preparation status.</p>
                    <div class="d-grid">
                        <a asp-action="Orders" class="btn btn-success btn-lg">
                            <i class="bi bi-card-checklist"></i> Manage Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0"><i class="bi bi-receipt"></i> Bills</h3>
                </div>
                <div class="card-body">
                    <p>Create and process bills for customers.</p>
                    <p>Calculate totals, apply discounts, and handle payments.</p>
                    <div class="d-grid">
                        <a asp-action="Bills" class="btn btn-info btn-lg">
                            <i class="bi bi-receipt"></i> Manage Bills
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0"><i class="bi bi-menu-button-wide"></i> Menu</h3>
                </div>
                <div class="card-body">
                    <p>View the restaurant menu.</p>
                    <p>Check item availability, prices, and descriptions.</p>
                    <div class="d-grid">
                        <a asp-action="Menu" class="btn btn-warning btn-lg">
                            <i class="bi bi-menu-button-wide"></i> View Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Section -->
    <div class="row mt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h3 class="card-title mb-0">Quick Stats</h3>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h4 class="text-primary">@ViewBag.FreeTablesCount</h4>
                                <p class="mb-0">Free Tables</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h4 class="text-danger">@ViewBag.OccupiedTablesCount</h4>
                                <p class="mb-0">Occupied Tables</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h4 class="text-warning">@ViewBag.PendingOrdersCount</h4>
                                <p class="mb-0">Pending Orders</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 border rounded bg-light">
                                <h4 class="text-success">@ViewBag.CompletedOrdersCount</h4>
                                <p class="mb-0">Completed Orders</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>