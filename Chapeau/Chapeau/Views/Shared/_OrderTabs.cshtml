@{
    string status = Context.Request.Query["status"].ToString();
}
<ul class="nav nav-tabs custom-tabs mb-4">
    <li class="nav-item">
        <a class="nav-link @(status == "Preparing,Ordered,Ready" ? "active" : "")"
           asp-action="Index" asp-route-status="Preparing,Ordered,Ready">
            All orders
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(status == "Preparing,Ordered" ? "active" : "")"
           asp-action="Index" asp-route-status="Preparing,Ordered">
            Active
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(status == "Ready" ? "active" : "")"
           asp-action="Index" asp-route-status="Ready">
            Completed
        </a>
    </li>
</ul>
