@using Chapeau.Models;
@using Chapeau.Services;

@{
    var loggedInEmployee = Context.Session.GetObject<Employee>("LoggedInEmployee");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chapeau</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chapeau.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables-view.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (loggedInEmployee != null)
                {
                    @if (loggedInEmployee.Role.Equals("Manager", StringComparison.OrdinalIgnoreCase))
                    {
                        <a class="navbar-brand" asp-controller="Manager" asp-action="Index">Chapeau</a>
                    }
                    else if (loggedInEmployee.Role.Equals("Waiter", StringComparison.OrdinalIgnoreCase))
                    {
                        <a class="navbar-brand" asp-controller="Waiter" asp-action="Tables">Chapeau</a>
                    }
                    else if (loggedInEmployee.Role.Equals("Kitchen", StringComparison.OrdinalIgnoreCase) ||
                    loggedInEmployee.Role.Equals("Bar", StringComparison.OrdinalIgnoreCase))
                    {
                        <a class="navbar-brand" asp-controller="KitchenBarDisplay" asp-action="Index">Chapeau</a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Auth" asp-action="Login">Chapeau</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (loggedInEmployee != null)
                        {
                            <!-- Show role-specific navigation options based on the user's role -->
                            @if (loggedInEmployee.Role.Equals("Manager", StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Manager" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a>
                                </li>
                            }
                            else if (loggedInEmployee.Role.Equals("Waiter", StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Waiter" asp-action="Tables">
                                        <i class="bi bi-grid-3x3"></i> Tables
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Waiter" asp-action="Orders">
                                        <i class="bi bi-card-checklist"></i> Orders
                                    </a>
                                </li>
                            }
                            else if (loggedInEmployee.Role.Equals("Kitchen", StringComparison.OrdinalIgnoreCase) ||
                            loggedInEmployee.Role.Equals("Bar", StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="KitchenBarDisplay" asp-action="Index">
                                        <i class="bi bi-card-checklist"></i> Orders
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Login/Logout section on the right side -->
                    <ul class="navbar-nav">
                        @if (loggedInEmployee != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <strong>@loggedInEmployee.FirstName @loggedInEmployee.LastName</strong>
                                    <span class="badge bg-secondary ms-1">@loggedInEmployee.Role</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (loggedInEmployee == null || !loggedInEmployee.Role.Equals("Waiter", StringComparison.OrdinalIgnoreCase))
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - Chapeau Restaurant Management System
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>