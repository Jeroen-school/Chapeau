@model List<Chapeau.Models.Order>
@using Chapeau.Models.Enums
@using Chapeau.Models

@if (Model.Count > 0)
{
    @foreach (Order order in Model)
    {
        @if (order.OrderItems.Any(item => item.Status.ToString() == "Ordered") || order.OrderItems.Any(item => item.Status.ToString() == "Preparing") || order.OrderItems.Any(item => item.Status.ToString() == "Ready"))
        {
            string urgentClass = (order.MinutesSinceOrdered > 20 && (order.Status.ToString() == "Preparing" || order.Status.ToString() == "Ordered")) ? "urgent-order" : "";
            <div class="col-12 col-sm-6 col-md-4 d-flex" id="card">
                <!-- Make each card fill the vertical space of its column using Bootstrap only -->
                <div class="flex-fill d-flex flex-column order-card @urgentClass">
                    <div class="order-status-label text-center bg-opacity-25 bg-black">
                        @order.Status
                    </div>

                    <div class="card-body d-flex flex-column">
                        @await Html.PartialAsync("_OrderCard", order)
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="d-flex justify-content-center align-items-center text-center w-100 flex-grow-1">
        <p class="text-muted">No orders at the moment.</p>
    </div>
}
