@model List<Chapeau.Models.Order>

@foreach (Order order in Model)
{
    @if (order.Status.ToString().ToLower() == "ordered" || order.Status.ToString().ToLower() == "preparing" || order.Status.ToString().ToLower() == "ready")
    {
        string urgentClass = order.MinutesSinceOrdered > 20 && order.Status.ToString().ToLower() == "preparing" ? "urgent-order" : "";
        <div class="col-md-4">
            <div class="card-body d-flex flex-column order-card @urgentClass">
                @await Html.PartialAsync("_OrderCard", order)
            </div>
        </div>
    }
}